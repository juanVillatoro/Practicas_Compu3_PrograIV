{{> header}}
<h2>{{viewTitle}}</h2>

<form action="/department" method="POST">
    <input type="hidden" name="_id" value="{{department._id}}"><br />
    Name
    <input type="text" name="name" value="{{department.name}}" required><br />
    Alias
    <input type="text" name="alias" value="{{department.alias}}" required><br />
    Description
    <input type="text" name="description" value="{{department.description}}" required><br />
    <button type="submit" class="btn btn-info">Save</button>
</form>